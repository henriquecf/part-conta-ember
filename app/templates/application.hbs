<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--fixed-tabs">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title">{{pageTitle}}</span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        {{#link-to 'new-invoice' (query-params revenue=false) class="mdl-navigation__link" tagName="a"}}
          + gasto
        {{/link-to}}
        {{#link-to 'new-invoice' (query-params revenue=true) class="mdl-navigation__link" tagName="a"}}
          + ganho
        {{/link-to}}
        <a {{action 'invalidateSession'}} class="mdl-navigation__link" href="">
          Sair
        </a>
      </nav>
    </div>
    
    <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
      {{#link-to 'dashboard' class="mdl-layout__tab is-active" tagName="a"}}
        Geral
      {{/link-to}}
      {{#link-to 'reports' class="mdl-layout__tab" tagName="a"}}
        Relat√≥rios
      {{/link-to}}
      {{#link-to 'invoices' class="mdl-layout__tab" tagName="a"}}
        Contas
      {{/link-to}}
    </div>
  </header>
  <main class="mdl-layout__content">
    <div class="page-content">
      {{liquid-outlet class="main-outlet"}}
    </div>
  </main>
</div>
