<div class="mdl-cell mdl-cell--4-col balance-card">
  Ganhos {{number-to-currency value=model.revenueTotal isRevenue=true}}
</div>
<div class="mdl-cell mdl-cell--4-col balance-card">
  Gastos {{number-to-currency value=model.expensesTotal}}
</div>
<div class="mdl-cell mdl-cell--4-col balance-card">
  Balanço {{number-to-currency value=model.balance isRevenue=model.isBalanceRevenue}}
</div>

{{invoices-list list=model.invoices list-size=3 cardTitle="Últimas contas"}}

<div class="mdl-cell mdl-cell--4-col">
  {{#mdl-card title="Despesas por categoria" class="match-parent"}}
    <div class="mdl-card__supporting-text">
      {{ember-chart type="Doughnut" data=model.expensesGroupedByCategory options=chartOptions legend=true}}
    </div>
  {{/mdl-card}}
</div>

{{#if hasManyGroups}}
  <div class="mdl-cell mdl-cell--4-col">
    {{#mdl-card title="Despesas por grupo" class="match-parent"}}
      <div class="mdl-card__supporting-text">
        {{ember-chart type="Doughnut" data=model.expensesGroupedByGroup options=chartOptions legend=true}}
      </div>
    {{/mdl-card}}
  </div>
{{/if}}

{{#if hasManyUsers}}
  <div class="mdl-cell mdl-cell--4-col">
    {{#mdl-card title="Despesas por usuário" class="match-parent"}}
      <div class="mdl-card__supporting-text">
        {{ember-chart type="Doughnut" data=model.expensesGroupedByUser options=chartOptions legend=true}}
      </div>
    {{/mdl-card}}
  </div>
{{/if}}
